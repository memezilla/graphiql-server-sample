{
  "name": "Hilton",
  "version": "1.0.0",
  "description": "Hilton Test API server",
  "engines": {
    "node": ">=8"
  },
  "author": "Liccy Fuentes",
  "scripts": {
    "compile": "npm run clean && npm run gen:type-def && tsc && cp gen/schema.graphql dist/schema.graphql",
    "start": "node api/index.js",
    "clean": "rm -rf dist gen",
    "test:update-snapshots": "NODE_ENV=localtest npm run reset-db && NODE_ENV=localtest jest --updateSnapshot --config=jest.config.json",
    "test": "NODE_ENV=localtest npm run reset-db && NODE_ENV=localtest jest --config jest.config.json",
    "dev": "NODE_ENV=development nodemon --watch api -e ts,js,graphql --exec 'npm run gen:type-def && ./node_modules/.bin/ts-node --inspect api/index.ts'",
    "lint": "tslint --type-check -c tslint.json -p tsconfig.json 'src/**/*.ts'",
    "create-migration": "knex migrate:make",
    "migrations": "knex migrate:latest",
    "rollback-migration": "knex migrate:rollback",
    "seed": "knex seed:run",
    "reset-db": "node -e \"require('./database/db-reset').resetFromCLI()\"",
    "reset-test-db": "NODE_ENV=localtest yarn run reset-db",
    "gen:concat-schema": "mkdir -p gen && find api -type f -name '*.graphql' -exec cat {} + > ./gen/schema.graphql",
    "gen:json-schema": "apollo-codegen introspect-schema gen/schema.graphql --output gen/schema.json",
    "gen:typescript-schema": "graphtype -s gen/schema.json -o gen/schema-type-def.d.ts",
    "gen:type-def": "rm -rf gen && npm run gen:concat-schema && npm run gen:json-schema && npm run gen:typescript-schema"
  },
  "lint-staged": {
    "*.js": [
      "prettier --single-quote --trailing-comma es5 --write",
      "git add",
      "eslint"
    ],
    "*.ts": [
      "prettier --single-quote --trailing-comma es5 --write",
      "git add"
    ]
  },
  "now": {
    "env": {
      "NODE_ENV": "production"
    }
  },
  "main": "api/index.js",
  "dependencies": {
    "bluebird": "^3.5.0",
    "body-parser": "^1.17.2",
    "boxen": "^1.2.1",
    "casual": "^1.5.14",
    "chalk": "^2.0.1",
    "cors": "^2.8.3",
    "dotenv": "^4.0.0",
    "express": "^4.15.3",
    "express-jwt": "^5.3.0",
    "find": "^0.2.7",
    "graphql": "^0.10.3",
    "graphql-server-express": "^1.0.0",
    "graphql-tools": "^1.1.0",
    "jwks-rsa": "^1.2.0",
    "knex": "^0.13.0",
    "knex-cleaner": "^1.1.3",
    "knex-hooks": "^0.0.4",
    "lodash": "^4.17.4",
    "moment": "^2.18.1",
    "pg": "^6.4.0",
    "sanitize-html": "^1.16.1",
    "striptags": "^3.1.0"
  },
  "devDependencies": {
    "@2fd/graphtype": "^1.0.1",
    "@types/body-parser": "^1.16.4",
    "@types/chalk": "^0.4.31",
    "@types/cors": "^2.8.1",
    "@types/dotenv": "^4.0.0",
    "@types/express": "^4.0.36",
    "@types/express-jwt": "^0.0.35",
    "@types/graphql": "^0.10.2",
    "@types/jest": "^20.0.4",
    "@types/knex": "^0.0.56",
    "@types/lodash": "^4.14.68",
    "@types/node": "^8.0.9",
    "@types/sanitize-html": "^1.14.0",
    "@types/striptags": "^0.0.5",
    "apollo-codegen": "^0.14.3",
    "axios": "^0.16.2",
    "eslint": "^4.2.0",
    "eslint-config-prettier": "^2.2.0",
    "eslint-config-xo-space": "^0.16.0",
    "eslint-plugin-prettier": "^2.1.2",
    "eslint-plugin-unicorn": "^2.1.2",
    "get-port": "^3.1.0",
    "husky": "^0.14.1",
    "jest": "^20.0.4",
    "lint-staged": "^4.0.0",
    "nodemon": "^1.11.0",
    "prettier": "^1.5.2",
    "ts-jest": "^20.0.7",
    "ts-node": "^3.2.0",
    "tslint": "^5.5.0",
    "tslint-config-airbnb": "^5.2.1",
    "tslint-config-prettier": "^1.1.0",
    "typescript": "^2.4.2"
  }
}
